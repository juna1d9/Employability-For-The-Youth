<main>
  <h1>
    <center>Apply For Job</center>
  </h1>
  <div class="container">
    <form action="/applyforjob" method="post" enctype="multipart/form-data">

      <input type="hidden" name="ja_j_id" value="<%= j_id %>">

      <label for="cvfile"> <b>Upload C.V:</b></label>
      <input type="file" name="file" id="cvfile" accept=".pdf" required />

      <label for="enquiry"><b>Message: </b></label>
      <textarea name="ja_message" placeholder="Enter Message" rows="4" cols="50" required></textarea>
      
      <br />
      <button type="submit">Submit</button>

      <% if (typeof error_message !== 'undefined' && error_message) { %>
        <div class="mt-3 alert alert-danger" role="alert">
          <%= error_message %>
        </div>
      <% } %>
      <% if (typeof message !== 'undefined' && message) { %>
        <div class="mt-3 alert alert-success" role="alert">
          <%= message %>
        </div>
      <% } %>

    </form>
  </div>
</main>