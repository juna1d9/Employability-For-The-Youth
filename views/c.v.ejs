            links += '<br><br>';
            links += '<a href="https://cs.unc.edu/experience/career/tech-resume-samples/" target="_blank">CV Template 3</a>';
            links += '<br><br>';
            links += '<a href="https://www.jobhero.com/resume/examples/computer-software" target="_blank">CV Template 4</a>';
            links += '<br><br>';
