    <h2><center>C.V</center></h2>
    <main>
        <div id="cvcontainer" style="text-align: center; margin-top: 20px;"></div>
      <form action="/submitcv" method="post">
        <label for="fieldofInterest"> Field of Interest: </label>
        <select name="fieldofInterest" id="fieldofInterest">
          <option value="select">Select One</option>
          <option value="computing">Computing</option>
          <option value="law">Law</option>
          <option value="finance">Finance</option>
          <option value="economics">Economics</option>
          <option value="business">Business</option>
        </select>
        <br />
        <label>Skills:</label>
        <div>
            <input type="checkbox" name="skills" value="teamwork"> Teamwork
            <input type="checkbox" name="skills" value="initiative"> Initiative
            <input type="checkbox" name="skills" value="leadership"> Leadership
            <input type="checkbox" name="skills" value="professionalism"> Professionalism
            <input type="checkbox" name="skills" value="analytical"> Analytical
            <input type="checkbox" name="skills" value="organised"> Organised
            <input type="checkbox" name="skills" value="ability"> Ability to work under pressure
        </div>
        <br />
        <label for="experience"> Previous Experience: </label>
        <textarea name="experience" id="experience" rows="4" cols="50"></textarea>
        <br />
        <label for="education"> Education History: </label>
        <textarea name="experience" id="experience" rows="4" cols="50"></textarea>
        <br />
        <label for="phonenumber"> Phone Number: </label>
        <input type="tel" name="phonenumber" id="phonenumber" required>
        <br />
        <label for="email"> Email Address: </label>
        <input type="email" name="email" id="email" required>
        <br />
        <label for="startdate"> Preferred Start Date: </label>
        <input type="date" name="startdate" id="startdate" required>
        <br />
        </select>
      </form>
      <div id ="interestLinks" class="cvcontainer"></div>

    </main>
    <script>
